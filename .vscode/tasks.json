{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "check-format",
      "presentation": {"reveal": "silent", "panel": "shared"},
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "type": "npm",
      "script": "cpd",
      "presentation": {"reveal": "silent", "panel": "shared"},
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "type": "npm",
      "script": "coverage",
      "presentation": {"reveal": "silent", "panel": "shared"},
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "type": "npm",
      "script": "format",
      "presentation": {"reveal": "silent", "panel": "shared"},
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "type": "npm",
      "script": "build",
      "presentation": {"reveal": "silent", "panel": "shared"},
      "problemMatcher": ["$tsc", "$node-sass"],
      "group": "build"
    },
    {
      "type": "npm",
      "script": "lint",
      "presentation": {"reveal": "silent", "panel": "shared"},
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "type": "npm",
      "script": "fix",
      "presentation": {"reveal": "always", "panel": "shared"},
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "presentation": {
        "focus": true,
        "panel": "dedicated"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "applyTo": "closedDocuments",
        "fileLocation": ["relative", "${cwd}"],
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "Compiled |Failed to compile."
          }
        }
      }
    },
    {
      "type": "npm",
      "script": "test",
      "isBackground": true,
      "presentation": {"reveal": "silent", "panel": "shared"},
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "test-headless",
      "isBackground": true,
      "presentation": {"reveal": "silent", "panel": "shared"},
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "e2e",
      "isBackground": true,
      "presentation": {"reveal": "silent", "panel": "shared"},
      "problemMatcher": []
    },
    {
      "label": "repair package-lock.json merge conflicts",
      "detail": "run this task AFTER fixing all conflicts in package.json",
      "type": "shell",
      "command": "npm install --package-lock-only",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "build plantuml images",
      "detail": "compile the given files to pngs in a subfolder",
      "type": "shell",
      "command": ".vscode/scripts/Invoke-PlantUml.ps1 **/diagrams/*.pu",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    }
  ]
}
